<% layout('layouts/boilerplate') -%>

<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h2> <i class="fa-solid fa-lock"></i> Encryption : Hide Your Message </h2>
            <p> Upload an Image and enter your secret message to encode it invisibly. </p>
            <br>
    <div class="formdiv">
        <form method="POST" action="/encode" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">
                    <i class="fa-solid fa-heading"></i> Title for your encryption:
                </label>
                <input type="text" id="title" name="Encode[title]" 
                    placeholder="Give a memorable title to identify this encryption" 
                    class="form-control" required>
                <div class="invalid-feedback">Please provide a title</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label"><i class="fa-solid fa-upload"></i> 1. Upload Image:</label>
                <input type="file" name="originalImage" accept="image/*" class="form-control" required>
                <div class="invalid-feedback">Please use a image with file type JPEG or PNG</div>
            </div>
            <div class="mb-3">
                <label for="secret-message" class="form-label"><i class="fa-regular fa-keyboard"></i> 2. Enter Secret Message:</label>
                <textarea name="Encode[message]" rows="2" placeholder="Type your secret message here..." class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a secret message</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label"><i class="fa-regular fa-envelope"></i> Enter a valid Email</label>
                <div class="input-group">
                    <input type="email" id="email" name="Encode[email]" placeholder="Enter a valid email" class="form-control" required>
                    <button type="button" id="sendOtpBtn" class="btn btn-outline-dark">Send OTP</button>
                </div>
                <div class="invalid-feedback">Please enter a valid Email</div>
            </div>

            <div class="mb-3" id="otpDiv" style="display: none;">
                <label for="otp" class="form-label"><i class="fa-solid fa-shield-halved"></i> Enter OTP</label>
                <input type="text" id="otp" name="Encode[otp]" placeholder="Enter 6-digit OTP" class="form-control" maxlength="6" required>
                <div class="invalid-feedback">Please enter valid OTP</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"><i class="fa-solid fa-eye-slash"></i> Enter password </label>
                <input type="password" name="Encode[password]" placeholder="Enter password" class="form-control" required>
                <div class="valid-feedback">password looks good</div>
                <div class="invalid-feedback">please enter a password</div>
            </div>
            <br><br>
            <button class="btn btn-outline-dark"><i class="fa-solid fa-key"></i> Encode Message </button>
        </form>
    </div>
        </div>
    </div>

    <!-- OTP Sending Script -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const sendOtpBtn = document.getElementById('sendOtpBtn');
        const otpDiv = document.getElementById('otpDiv');
        const emailInput = document.querySelector('input[name="Encode[email]"]');

        sendOtpBtn.addEventListener('click', async function() {
            const email = emailInput.value;
            if (!email) {
                alert('Please enter an email address');
                return;
            }

            try {
                const response = await fetch('/send-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email })
                });

                const data = await response.json();
                if (response.ok) {
                    otpDiv.style.display = 'block';
                    alert(data.message);
                    sendOtpBtn.disabled = true;
                    emailInput.readOnly = true;
                
                    // Enable button after 1 minute
                    setTimeout(() => {
                        sendOtpBtn.disabled = false;
                    }, 60000);
                } else {
                    alert(data.error);
                }
            } catch (err) {
                console.error('Error:', err);
                alert('Failed to send OTP. Please try again.');
            }
        });
    });
    </script>
</body>