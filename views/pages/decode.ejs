<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Decode Message - StegoHide</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="style.css">
</head>
<body class="bg-light">
    <custom-navbar></custom-navbar>
    
    <main class="container py-5">
        <div class="card shadow-sm mx-auto" style="max-width: 800px;">
            <div class="card-body p-4 p-md-5">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="bi bi-unlock-fill me-2"></i> Reveal Hidden Message
                </h1>
                <p class="text-muted mb-4">Upload an encoded image to extract the secret message hidden within it.</p>

                <div class="space-y-4">
                    <!-- Upload Section -->
                    <div class="mb-4">
                        <div class="border border-2 border-dashed rounded p-4 text-center">
                            <input type="file" id="image-upload" class="d-none" accept="image/*">
                            <label for="image-upload" class="btn btn-primary mb-3">
                                <i class="bi bi-upload me-2"></i> Upload Encoded Image
                            </label>
                            <p class="small text-muted mb-0">Select the image containing the hidden message</p>
                        </div>
                        
                        <div class="position-relative mt-3">
                            <img id="image-preview" src="" alt="Preview" class="d-none w-100 rounded shadow-sm">
                        </div>
                    </div>

                    <!-- Password Section -->
                    <div id="password-section" class="d-none mb-4">
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="decryption-password" placeholder="Enter password">
                            <label for="decryption-password">Decryption Password (if required)</label>
                            <button class="btn btn-link position-absolute top-50 end-0 translate-middle-y" id="toggle-password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <button id="decode-btn" class="btn btn-success w-100">
                        <i class="bi bi-key-fill me-2"></i> Decode Message
                    </button>

                    <!-- Result Section -->
                    <div id="result-section" class="d-none mt-4">
                        <hr class="my-4">
                        <div class="alert alert-success">
                            <h4 class="alert-heading"><i class="bi bi-check-circle-fill me-2"></i>Message Found!</h4>
                            <p class="mb-0">The hidden message was successfully extracted:</p>
                        </div>
                        
                        <div class="card bg-light">
                            <div class="card-body">
                                <p id="extracted-message" class="mb-0 font-monospace"></p>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary" onclick="copyToClipboard()">
                                <i class="bi bi-clipboard me-2"></i> Copy Message
                            </button>
                            <button class="btn btn-outline-primary">
                                <i class="bi bi-download me-2"></i> Save as Text File
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <custom-footer></custom-footer>
    
    <script src="components/navbar.js"></script>
    <script src="components/footer.js"></script>
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle password visibility
        document.getElementById('toggle-password')?.addEventListener('click', function() {
            const passwordInput = document.getElementById('decryption-password');
            const icon = this.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        });
        
        // Demo decode functionality
        document.getElementById('decode-btn').addEventListener('click', function() {
            const decodeBtn = this;
            const originalText = decodeBtn.innerHTML;
            
            // Show loading state
            decodeBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Decoding...';
            decodeBtn.disabled = true;
            
            // Simulate decoding process
            setTimeout(() => {
                // Show result section
                document.getElementById('result-section').classList.remove('d-none');
                
                // For demo purposes, show a sample message
                document.getElementById('extracted-message').textContent = 'This is a sample hidden message that was extracted from the image.';
                
                // Reset button
                decodeBtn.innerHTML = originalText;
                decodeBtn.disabled = false;
                
                // Scroll to results
                document.getElementById('result-section').scrollIntoView({ behavior: 'smooth' });
            }, 2000);
        });

        // Image preview functionality
        document.getElementById('image-upload').addEventListener('change', function(e) {
            const preview = document.getElementById('image-preview');
            if (e.target.files && e.target.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                    document.getElementById('password-section').classList.remove('d-none');
                }
                reader.readAsDataURL(e.target.files[0]);
            }
        });

        // Copy to clipboard function
        function copyToClipboard() {
            const text = document.getElementById('extracted-message').textContent;
            navigator.clipboard.writeText(text).then(() => {
                alert('Message copied to clipboard!');
            });
        }
    </script>
</body>
</html>